<h1><%= current_user.email %>'s Galleries</h1>
<% if true %>
  <ul>
    <li>You are signed in as: <b><%= current_user.email %></b> Admin</li>
  </ul>
<% end %>

<% (current_user.galleries).each do |gallery| %>
  <ul>
    <li><%= link_to gallery.title, gallery %></li>
    <li><%= gallery.user_id %></li>
    <li><%= gallery.user.email %></li>
  </ul>
<% end %>
  <ul>
    <li><%= link_to "New Gallery", new_user_gallery_path(current_user) %></li>
  </ul>
