$("ul.errors").html("")
<% if @gallery.errors.any? %>
  <% @gallery.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".gallery-index").html("<%= j (render 'gallery') %>")
  $("#gallery-modal").modal("hide")
<% end %>
